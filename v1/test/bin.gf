(test (= (int 0xff) 255))
(test (= (inc 0xfe) 0xff))

(let (b (new-bin 1))
  (test (= (len b) 1))
  (test (= (# b 0) 0x00))
  (set (# b 0) 0xfe)
  (test (= (# b 0) 0xfe))
  (test (= (inc (# b 0)) 0xff))
  (test (= (# b 0) 0xff)))

(let (b (new-bin))
  (push-bytes b "abc")
  (test (= (len b) 3))
  (test (= (str b) "abc")))

(let (b (bin 0x10 0x20 0x30)
      n 0x00)
  (for (b v) (inc n v))
  (test (= n 0x60)))